<!-- PhotoSwipe CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/photoswipe@5.4.4/dist/photoswipe.css">

<!-- PhotoSwipe JavaScript -->
<script>
  import PhotoSwipeLightbox from 'https://cdn.jsdelivr.net/npm/photoswipe@5.4.4/dist/photoswipe-lightbox.esm.js';
  
  // Inicializar PhotoSwipe
  const lightbox = new PhotoSwipeLightbox({
    gallery: '#poster-gallery',
    children: 'a',
    pswpModule: () => import('https://cdn.jsdelivr.net/npm/photoswipe@5.4.4/dist/photoswipe.esm.js'),
    
    // Configuración específica para el afiche
    bgOpacity: 0.9,
    showHideAnimationType: 'zoom',
    
    // Botones personalizados
    toolbarButtons: [
      'zoom',
      'download',
      'close'
    ],
    
    // Configuración de zoom
    initialZoomLevel: 'fit',
    secondaryZoomLevel: 1.5,
    maxZoomLevel: 3,
    
    // Configuración para móviles
    pinchToClose: true,
    closeOnVerticalDrag: true,
    
    // Configuración de descarga
    downloadButton: true,
    
    // Personalización de la interfaz
    padding: { top: 20, bottom: 40, left: 100, right: 100 },
    
    // Configuración responsive
    returnFocus: false,
    trapFocus: false,
  });
  
  // Personalizar el título del afiche
  lightbox.on('uiRegister', function() {
    lightbox.pswp.ui.registerElement({
      name: 'custom-caption',
      order: 9,
      isButton: false,
      appendTo: 'root',
      html: 'Caption text',
      onInit: (el, pswp) => {
        lightbox.pswp.on('change', () => {
          const currSlideElement = lightbox.pswp.currSlide.data.element;
          let captionHTML = '';
          
          captionHTML = `
            <div class="pswp__custom-caption">
              <h3>Baby Baloncesto Nariño 2025</h3>
              <p>Afiche oficial del torneo - Categorías 2012, 2013, 2014</p>
            </div>
          `;
          
          el.innerHTML = captionHTML;
        });
      }
    });
  });
  
  lightbox.init();
  
  // Función para descargar el afiche
  window.downloadPoster = function() {
    const link = document.createElement('a');
    link.href = '/flayer-baloncesto.webp';
    link.download = 'flayer-baloncesto.webp';
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };
  
  // Función para compartir el afiche
  window.sharePoster = function() {
    const shareData = {
      title: 'Baby Baloncesto Nariño 2025',
      text: '🏀 ¡Inscribe tu equipo al Baby Baloncesto Nariño 2025! Categorías 2012-2014. Contacto: +57 315 321 5383',
      url: window.location.href
    };
    
    if (navigator.share) {
      navigator.share(shareData);
    } else {
      // Fallback para navegadores que no soportan Web Share API
      const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(shareData.text + ' ' + shareData.url)}`;
      window.open(whatsappUrl, '_blank');
    }
  };
</script>

<style>
  /* Estilos personalizados para PhotoSwipe */
  .pswp__custom-caption {
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 16px;
    border-radius: 8px;
    margin: 16px;
    text-align: center;
  }
  
  .pswp__custom-caption h3 {
    font-size: 18px;
    font-weight: bold;
    margin: 0 0 8px 0;
    color: #FF6B35;
  }
  
  .pswp__custom-caption p {
    font-size: 14px;
    margin: 0;
    opacity: 0.9;
  }
  
  /* Efecto hover mejorado */
  .poster-item:hover {
    transform: translateY(-4px);
  }
  
  /* Animación de carga */
  .poster-gallery {
    animation: fadeInUp 0.6s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive para móviles */
  @media (max-width: 768px) {
    .pswp__custom-caption {
      margin: 8px;
      padding: 12px;
    }
    
    .pswp__custom-caption h3 {
      font-size: 16px;
    }
    
    .pswp__custom-caption p {
      font-size: 12px;
    }
  }
</style>