<style>
  .carousel-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .carousel-track {
    display: flex;
    width: calc(200% + 2rem); /* Doble ancho para el efecto infinito */
    animation: scroll-left 30s linear infinite;
    gap: 1rem;
  }
  
  .carousel-slide {
    flex: 0 0 auto;
    width: 200px;
    min-width: 200px;
  }
  
  .sponsor-card {
    width: 100%;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Animación de desplazamiento infinito */
  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  
  /* Pausa la animación al hacer hover */
  .carousel-container:hover .carousel-track {
    animation-play-state: paused;
  }
  
  /* Responsive para móviles */
  @media (max-width: 768px) {
    .carousel-slide {
      width: 160px;
      min-width: 160px;
    }
    
    .sponsor-card {
      height: 100px;
    }
    
    .carousel-track {
      animation-duration: 25s; /* Más rápido en móviles */
    }
  }
  
  @media (max-width: 480px) {
    .carousel-slide {
      width: 140px;
      min-width: 140px;
    }
    
    .sponsor-card {
      height: 90px;
    }
    
    .carousel-track {
      animation-duration: 20s;
    }
  }
  
  /* Efecto de fade en los bordes */
  .carousel-container::before,
  .carousel-container::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50px;
    z-index: 10;
    pointer-events: none;
  }
  
  .carousel-container::before {
    left: 0;
    background: linear-gradient(to right, white, transparent);
  }
  
  .carousel-container::after {
    right: 0;
    background: linear-gradient(to left, white, transparent);
  }
  
  /* Animación de entrada */
  .carousel-container {
    animation: fadeInUp 0.8s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Funcionalidad adicional para el carrusel
  document.addEventListener('DOMContentLoaded', function() {
    const carouselTrack = document.getElementById('carousel-track');
    
    // Pausar animación cuando el usuario interactúa
    let isUserInteracting = false;
    
    carouselTrack.addEventListener('mouseenter', () => {
      isUserInteracting = true;
      carouselTrack.style.animationPlayState = 'paused';
    });
    
    carouselTrack.addEventListener('mouseleave', () => {
      isUserInteracting = false;
      carouselTrack.style.animationPlayState = 'running';
    });
    
    // Pausar cuando la pestaña no está visible (optimización de rendimiento)
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        carouselTrack.style.animationPlayState = 'paused';
      } else if (!isUserInteracting) {
        carouselTrack.style.animationPlayState = 'running';
      }
    });
    
    // Ajustar velocidad según el tamaño de pantalla
    function adjustCarouselSpeed() {
      const screenWidth = window.innerWidth;
      let duration = '30s'; // Velocidad por defecto (lenta)
      
      if (screenWidth <= 480) {
        duration = '20s';
      } else if (screenWidth <= 768) {
        duration = '25s';
      }
      
      carouselTrack.style.animationDuration = duration;
    }
    
    // Ajustar velocidad al cargar y redimensionar
    adjustCarouselSpeed();
    window.addEventListener('resize', adjustCarouselSpeed);
  });
</script>